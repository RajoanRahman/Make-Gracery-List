<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_id"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tittle"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/enter_item"
            />

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter Your Grocery"
             android:padding="10dp"
             android:layout_marginTop="15dp"
             android:id="@+id/grocery_item_editText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Grocery Item"
                android:padding="10dp"
                android:id="@+id/grocery_quantity_editText"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/save_buton"
                android:layout_marginTop="20dp"
                android:text="@string/save_item"
                android:background="#f562e7"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>